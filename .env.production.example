# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# The Quarterdeck - Hostinger Deployment
# ============================================

# REQUIRED - Database
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# REQUIRED - Session Security (generate a random 32+ character string)
SESSION_SECRET=your-super-secret-session-key-here-make-it-long

# Server Configuration
NODE_ENV=production
PORT=5000

# Admin Panel (optional - defaults to 'admin')
ADMIN_PATH=admin

# ============================================
# SUPABASE CONFIGURATION (for authentication)
# Get these from your Supabase project dashboard
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ============================================
# EMAIL CONFIGURATION (Hostinger SMTP)
# ============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=noreply@thequarterdeck.pk
SMTP_PASS=your-email-password
EMAIL_FROM="The Quarterdeck" <noreply@thequarterdeck.pk>
ADMIN_EMAIL=admin@thequarterdeck.pk

# ============================================
# CLOUDFLARE TURNSTILE (bot protection)
# Get these from Cloudflare dashboard
# ============================================
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ============================================
# OPTIONAL SETTINGS
# ============================================
APP_URL=https://thequarterdeck.pk
LOG_LEVEL=info

# Storage Mode (local, supabase, or mirrored)
STORAGE_MODE=local
LOCAL_UPLOAD_DIR=uploads
LOCAL_STORAGE_BASE_URL=/uploads

# Session store (set to 'true' to use PostgreSQL for sessions)
USE_PG_SESSION_STORE=true
