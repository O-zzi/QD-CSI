# The Quarterdeck - Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# ===================
# REQUIRED VARIABLES
# ===================

# PostgreSQL database connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/quarterdeck?sslmode=require

# Session encryption secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here-min-32-characters

# ===================
# OPTIONAL VARIABLES
# ===================

# Server Configuration
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# Admin Panel Security
# Custom URL path for admin panel (default: admin)
ADMIN_PATH=your-custom-admin-path

# Email Configuration (Resend)
# Get API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=The Quarterdeck <noreply@thequarterdeck.pk>
ADMIN_EMAIL=admin@thequarterdeck.pk

# Cloudflare Turnstile (Bot Protection)
# Get keys from https://dash.cloudflare.com/turnstile
TURNSTILE_SITE_KEY=0x4XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TURNSTILE_SECRET_KEY=0x4XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Supabase (Storage, Auth, Realtime)
# Get from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Frontend Supabase (for Auth - use anon/public key, NOT service key)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Set to 'true' to enable Supabase Auth UI flows (default: use Passport.js local auth)
# VITE_USE_SUPABASE_AUTH=false

# Replit Deployment (auto-set by Replit)
# REPLIT_DEPLOYMENT=1
# ISSUER_URL=https://auth.replit.com/...

# ===================
# PRODUCTION NOTES
# ===================
# 
# 1. Never commit .env to version control
# 2. Use strong, unique secrets for SESSION_SECRET
# 3. Set ADMIN_PATH to a non-guessable value
# 4. Enable TURNSTILE in production for bot protection
# 5. Configure RESEND for email notifications
